{
  "name": "@fridgefm/radio-core",
  "author": "Grigory Gorshkov",
  "version": "2.3.2",
  "description": "internet radio engine made on NodeJS platform",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [
    "radio",
    "music",
    "mp3",
    "highland",
    "stream",
    "nodejs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kefir100/fridgefm-radio-core.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix ./src/**/*.*",
    "lint:ci": "eslint ./src/**/*.*",
    "test": "jest --config jest.config.json",
    "test:cov": "yarn test --collectCoverage=true"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "dev-null": "^0.1.1",
    "express": "^4.17.1",
    "get-mp3-duration": "^1.0.0",
    "highland": "^2.13.5",
    "klaw-sync": "^6.0.0",
    "node-id3": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": ">=10.5.3",
    "lodash": "^4.17.20",
    "ts-jest": "^26.4.4",
    "typescript": "4.0.5"
  },
  "bugs": {
    "url": "https://github.com/Kefir100/fridgefm-radio-core/issues"
  },
  "homepage": "http://fridgefm.com",
  "directories": {
    "example": "examples"
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "yarn lint"
    ]
  }
}
