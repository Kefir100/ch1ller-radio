{
  "name": "@kefir100/radio-engine",
  "author": "Grigory Gorshkov",
  "version": "2.0.0",
  "description": "internet radio engine made on NodeJS platform",
  "license": "MIT",
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [
    "radio",
    "music",
    "mp3",
    "highland",
    "stream",
    "nodejs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kefir100/radio-ch1ller.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint --fix -c tslint.json 'src/**/*.{js,ts}'",
    "lint:ci": "tslint -c tslint.json 'src/**/*.{js,ts}'",
    "test": "jest --config jest.config.json ./src ",
    "test:cov": "yarn test --collectCoverage=true"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "dev-null": "^0.1.1",
    "express": "^4.17.1",
    "get-mp3-duration": "^1.0.0",
    "highland": "^2.13.4",
    "node-id3": "^0.1.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": ">=8",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "bugs": {
    "url": "https://github.com/Kefir100/radio-ch1ller/issues"
  },
  "homepage": "http://ch1ller.com",
  "directories": {
    "example": "examples"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
