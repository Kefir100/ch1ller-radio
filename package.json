{
  "name": "@kefir100/radio-engine",
  "author": "Grigory Gorshkov",
  "version": "2.3.0",
  "description": "internet radio engine made on NodeJS platform",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [
    "radio",
    "music",
    "mp3",
    "highland",
    "stream",
    "nodejs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kefir100/radio-ch1ller.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix ./src/**/*.*",
    "lint:ci": "eslint ./src/**/*.*",
    "test": "jest --config jest.config.json",
    "test:cov": "yarn test --collectCoverage=true"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "dev-null": "^0.1.1",
    "express": "^4.17.1",
    "get-mp3-duration": "^1.0.0",
    "highland": "^2.13.4",
    "klaw-sync": "^6.0.0",
    "lodash": "^4.17.15",
    "node-id3": "^0.1.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "husky": "^1.3.1",
    "jest": "^25.2.7",
    "lint-staged": ">=8",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "bugs": {
    "url": "https://github.com/Kefir100/radio-ch1ller/issues"
  },
  "homepage": "http://ch1ller.com",
  "directories": {
    "example": "examples"
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
